<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>LiCo</id>
        <version>$version$</version>
        <title>LiCo</title>
        <authors>jvbsl</authors>
        <license type="file">LICENSE.txt</license>
        <ProjectUrl>https://github.com/jvbsl/LiCo</ProjectUrl>
        <IsTool>true</IsTool>
        <description>Tool for collecting licenses of dependencies.</description>
        <developmentDependency>true</developmentDependency>
    </metadata>
    <files>
        <file src="..\NOTICE" target="tools/" />
        <file src="..\NOTICE" target="NOTICE" />
        <file src="..\LICENSE.txt" target="LICENSE.txt" />
        <file src="bin\$configuration$\net5.0\*.config" target="content/" />
        
        <file src="LiCo.targets" target="build" />
        
        <file src="bin\$configuration$\$framework$\publish\runtimes\win\**" target="tools/runtimes/win/" />
        <file src="bin\$configuration$\$framework$\publish\*.dll" target="tools/" />
        <file src="bin\$configuration$\$framework$\publish\*.json" target="tools/" />
        <file src="bin\$configuration$\$framework$\publish\*.exe" target="tools/" />
        <file src="bin\$configuration$\$framework$\publish\*.config" target="tools/" />
    </files>
</package>
